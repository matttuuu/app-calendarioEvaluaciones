<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawer">

    <!--Dentro de estos include, vamos agregando todos los xml a nuestra vista-->
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/drawer_main_toolbar"
    />
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_fragment_container"
        />

    <!-- VISTA DEL CALENDARIO DEL INDIO UTURN-->

    <com.example.calendarapp_idra.CustomCalendarView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/custom_calendar_view"></com.example.calendarapp_idra.CustomCalendarView>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/drawer_header"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        />
        <!--layout_gravity hace que el elemento se vaya hacia un lugar especifico -->


</androidx.drawerlayout.widget.DrawerLayout>