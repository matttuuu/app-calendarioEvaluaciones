<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="13dp"
        android:text="ACTIVITY_5"
        app:layout_constraintBottom_toTopOf="@+id/buttonEducacion"
        app:layout_constraintStart_toStartOf="@+id/buttonEducacion" />

    <Button
        android:id="@+id/buttonSoftware"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"
        android:text="D. DE SOFTWARE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonTerapeutico" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="12dp"
        android:text="ACTIVITY_2"
        app:layout_constraintBottom_toTopOf="@+id/buttonSoftware"
        app:layout_constraintEnd_toEndOf="@+id/buttonSoftware"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/buttonSoftware" />

    <Button
        android:id="@+id/buttonSeguridadHigiene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="240dp"
        android:text="SEGURIDAD E HIGIENE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonTerapeutico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="18dp"
        android:text="A. TERAPEUTICO"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonEducacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="23dp"
        android:text="EDUCACION INICIAL"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="9dp"
        android:text="ACTIVITY_3"
        app:layout_constraintBottom_toTopOf="@+id/buttonTerapeutico"
        app:layout_constraintStart_toStartOf="@+id/buttonTerapeutico" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:text="ACTIVITY_4"
        app:layout_constraintEnd_toEndOf="@+id/buttonSoftware"
        app:layout_constraintTop_toBottomOf="@+id/buttonSoftware" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="8dp"
        android:text="ACTIVITY_6"
        app:layout_constraintBottom_toTopOf="@+id/buttonPsicopedagogia"
        app:layout_constraintStart_toStartOf="@+id/buttonPsicopedagogia" />

    <Button
        android:id="@+id/buttonPsicopedagogia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:text="PSICOPEDAGOGÍA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonSeguridadHigiene" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="10dp"
        android:text="ACTIVITY_7"
        app:layout_constraintBottom_toTopOf="@+id/buttonSeguridadHigiene"
        app:layout_constraintStart_toStartOf="@+id/buttonSeguridadHigiene" />


</androidx.constraintlayout.widget.ConstraintLayout>

